<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view_movie_details_top"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/tv_movie_details_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        tools:text="Avengers: Infinity War (2018)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tv_movie_details_rating"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        tools:text="Rate: 7.8"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_movie_details_runtime"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tv_movie_details_runtime"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        tools:text="2hr 13min"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_movie_details_rating"
        app:layout_constraintEnd_toStartOf="@id/tv_movie_details_genre"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tv_movie_details_genre"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        tools:text="Action"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_movie_details_runtime"
        app:layout_constraintEnd_toStartOf="@id/tv_movie_details_release_date"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tv_movie_details_release_date"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        tools:text="27 April 2018"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_movie_details_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>