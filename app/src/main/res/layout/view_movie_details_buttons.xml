<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_watch_trailer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_watch_trailer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_get_tickets"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_get_tickets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_get_tickets"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ib_watch_trailer"
            app:layout_constraintEnd_toStartOf="@id/ib_share"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_share"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ib_get_tickets"
            app:layout_constraintEnd_toStartOf="@id/ib_add_to_favorite"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_add_to_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_favorite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ib_share"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>