<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_details_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" tools:showIn="@layout/view_movie_details_tabs">

    <TextView
            android:id="@+id/tv_overview_section_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_overview_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="@string/very_long_text"/>

    <TextView
            android:id="@+id/tv_featured_crew_section_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_crew"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_featured_crew_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="@string/very_long_text"/>

    <TextView
            android:id="@+id/tv_cast_section_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cast"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_cast_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="@string/very_long_text"/>

</LinearLayout>