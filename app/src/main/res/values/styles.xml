<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextAppearance.Movie.Medium</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Widget.Movie.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.Movie</item>
        <item name="titleTextAppearance">@style/TextAppearance.Movie.Toolbar</item>
    </style>

    <style name="TextAppearance.Movie.Toolbar" parent="TextAppearance.Movie.Bold">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Movie.Transparent" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Movie.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Movie.Light" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Movie.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryLighter</item>
    </style>
    <style name="Widget.Movie.FloatingActionButton.Favorite" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fab_background_favorite</item>
    </style>
</resources>
